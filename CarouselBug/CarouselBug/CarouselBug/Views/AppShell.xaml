       xmlns:views="clr-namespace:CarouselBug.Views;assembly=CarouselBug"
       x:Class="CarouselBug.Views.AppShell">
    <TabBar>
        <Tab Title="About">
            <ShellContent ContentTemplate="{DataTemplate views:AboutPage}" />
        </Tab>
        <Tab Title="Browse">
            <ShellContent ContentTemplate="{DataTemplate views:Browse}" />
        </Tab>
    </TabBar>
</Shell>